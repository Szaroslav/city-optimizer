<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("head", { title: "Output" }) %>
  </head>
  <body>
    <div class="flex flex-col gap-4 p-8">

      <% if (todayNameDay) { %>
        <div class="name-day-container block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-indigo-600 dark:border-indigo-700">
          <h5 class="name-day-heading mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            Today celebrates
          </h5>
          <p class="name-day-whom font-normal text-gray-700 dark:text-gray-200">
            <%= todayNameDay.whom %>
          </p>
        </div>
      <% } %>

      <div class="holidays-container flex flex-col gap-4">
        <div class="holidays-count-container flex p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-slate-800 dark:border-slate-700">
          <div class="total-holidays-count-container">
            <h5 class="total-holidays-count-heading name-day-heading mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
              This year total holidays count
            </h5>
            <p class="total-holidays-count font-normal text-xl text-gray-700 dark:text-gray-200">
              <%= totalHolidaysCount %>
            </p>
          </div>

          <div class="tremaining-holidays-count-container ml-auto">
            <h5 class="remaining-holidays-count-heading name-day-heading mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
              This year remaining holidays count

            </h5>
            <p class="remaining-holidays-count font-normal text-xl text-gray-700 dark:text-gray-200">
              <%= remainingHolidaysCount %>
            </p>
          </div>
        </div>

        <% if (remainingHolidays.length) { %>
          <div class="remaining-holidays-container flex flex-col gap-4">

            <div class="next-holiday-container block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-indigo-600 dark:border-indigo-700">
              <h3 class="next-holiday-heading mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                Next holiday
              </h5>
              <h4 class="next-holiday-heading text-xl font-bold tracking-tight text-gray-900 dark:text-white">
                <%= nextHoliday.name %>
              </h5>
              <p class="next-holiday-content font-normal text-gray-700 dark:text-gray-200">
                <%= nextHoliday.date.toLocaleDateString() %>
              </p>
            </div>

            <div class="flex flex-wrap">
              <% for (const holiday of remainingHolidays.slice(1)) { %>
                <div class="holiday-container w-1/4 p-2">
                  <h3 class="holiday-heading text-lg font-medium dark:text-gray-900">
                    <%= holiday.name %>
                  </h3>
                  <p class="holiday-content dark:text-gray-500">
                    <%= holiday.date.toLocaleDateString() %>
                  </p>
                </div>
              <% } %>
            </div>

          </div>
        <% } %>
      </div>

    </div>
  </body>
</html>
